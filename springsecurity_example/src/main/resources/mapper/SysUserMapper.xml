<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.msb.springsecurity_example.mapper.SysUserMapper">
    <select id="selectUserByUserName" parameterType="string" resultType="java.lang.String">
        SELECT * FROM sys_user where user_name = #{userName}
    </select>

</mapper>